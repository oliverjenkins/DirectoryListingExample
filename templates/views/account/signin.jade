extends ../../layouts/default

block intro
	.container
		h1 Sign in

block content
	.container
		.row: .col-sm-8.col-md-6
			h2 Sign in with an existing account
			form(method='post')
				input(type='hidden', name='action', value='signin')
				.form-group(class=validationErrors.signin_email ? 'has-error' : null)
					label Email
					input(type='text', name='email', value=formData['signin-email']).form-control

				.form-group(class=validationErrors.signin_password ? 'has-error' : null)
					label Password
					input(type='password', name='password', value=formData.password).form-control

				.form-actions
					button(type='submit').btn.btn-primary Sign in
				hr.hr

		.row#register: .col-sm-8.col-md-6
			h2 Create a new account
			form(method='post' action='/account/signin#register')
				input(type='hidden', name='action', value='register')
				.form-group(class=validationErrors.name ? 'has-error' : null)
					label(for='join-name') Full Name
					input(type='text', name='name', id='name', value=formData.name).form-control
					if (validationErrors.name)
						span.help-inline #{validationErrors.name.message}

				.form-group(class=validationErrors.email ? 'has-error' : null)
					label Email
					input(type='text', name='email', value=formData['email']).form-control
					if (validationErrors.email)
						span.help-inline #{validationErrors.email.message}

				.form-group(class=validationErrors.password ? 'has-error' : null)
					label Password
					input(type='password', name='password', value=formData.password).form-control
					if (validationErrors.password)
						span.help-inline #{validationErrors.password.message}

				.form-group(class=validationErrors.password_confirm ? 'has-error' : null)
					label Password Confirmation
					input(type='password', name='password_confirm', value=formData.password_confirm).form-control
					if (validationErrors.password_confirm)
						span.help-inline #{validationErrors.password_confirm.message}

				.form-actions
					button(type='submit').btn.btn-primary Register
